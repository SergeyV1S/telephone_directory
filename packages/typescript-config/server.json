{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "incremental": true,
    
    "target": "es2020",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",

    "resolveJsonModule": true,

    "strictNullChecks": false,
    "noImplicitAny": false,

    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  }
}
